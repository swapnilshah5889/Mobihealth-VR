<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ll_patient_drawer"
    android:background="#0000"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="400dp"
        android:background="@color/DrawerBack"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_drawer_showhide"
                android:gravity="center"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_drawer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="10"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="2"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="18dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/White"
                    android:text="Checked in List"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>


                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="6dp"
                        android:src="@drawable/ic_down"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></ImageView>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/rv_main_drawer"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>






</LinearLayout>