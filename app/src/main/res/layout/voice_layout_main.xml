<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="bottom"

    android:layout_height="match_parent">


    <LinearLayout

        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#eee"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_33sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/colorAccent"
                    android:text="Ask Mobi : "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp"
                    android:background="@drawable/patient_list_back_round"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_3sdp"
                        android:textSize="@dimen/_13sdp"

                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:maxLines="2"
                        android:paddingRight="@dimen/_33sdp"
                        android:text="Add Medicine "
                        android:textColor="@color/colorPrimary"

                        android:textStyle="normal"></TextView>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>


            </LinearLayout>





        </RelativeLayout>

    </LinearLayout>

<!--    <include layout="@layout/voice_ripple_main"></include>-->

    <include layout="@layout/voice_layout_2"></include>

</RelativeLayout>